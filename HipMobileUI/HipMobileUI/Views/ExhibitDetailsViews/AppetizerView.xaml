<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HipMobileUI.Views.ExhibitDetailsViews.AppetizerView"
             xmlns:viewmodels="clr-namespace:HipMobileUI.Viewmodels;assembly=HipMobileUI" IsClippedToBounds="False">
    <ContentView.BindingContext><viewmodels:AppetizerViewmodel /></ContentView.BindingContext>
    <ContentView.Content>
        <Grid IsClippedToBounds="False">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.8*"/>
                <RowDefinition Height="0.2*"/>
            </Grid.RowDefinitions>
            <Image Source="{Binding Image}" Aspect="Fill"/>
            <Label Text="{Binding BottomText}" Grid.Row="1" Margin="10,20" LineBreakMode="WordWrap"/>
        </Grid>
    </ContentView.Content>
</ContentView>
