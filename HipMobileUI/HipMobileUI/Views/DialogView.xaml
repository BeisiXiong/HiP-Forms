<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="HipMobileUI.Views.DialogView" 
             xmlns:viewmodel="clr-namespace:HipMobileUI.Viewmodels.MainScreenContainables;assembly=HipMobileUI">
  <ContentView.BindingContext>
    <viewmodel:DialogViewmodel/>
  </ContentView.BindingContext>
  <ContentView.Content>
    <StackLayout VerticalOptions="FillAndExpand"
          HorizontalOptions="FillAndExpand"
          Orientation="Vertical"
          Spacing="15">
      <Label Text="{Binding Title}"/>
      <Label  Text="Dummy page to showcase alert and caption dialog" />
      <Button Text="Display Alert dialog" IsEnabled="true" Clicked="OnAlertDialogDisplay" />
      <Button Text="Display Caption dialog" IsEnabled="true" Clicked="OnCaptionDialogDisplay"/>
    </StackLayout>
  </ContentView.Content>
</ContentView>