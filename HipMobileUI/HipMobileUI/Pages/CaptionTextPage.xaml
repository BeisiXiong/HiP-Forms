<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dialogViewmodels="clr-namespace:HipMobileUI.Viewmodels.DialogViewmodels;assembly=HipMobileUI"
             xmlns:exhibitDetailsViewmodels="clr-namespace:HipMobileUI.Viewmodels.ExhibitDetailsViewmodels;assembly=HipMobileUI"
             x:Class="HipMobileUI.Pages.CaptionTextPage">
  <ContentPage.BindingContext>
    <exhibitDetailsViewmodels:CaptionTextViewmodel/>
  </ContentPage.BindingContext>
  <ContentPage.Content>
    <StackLayout>
      <ScrollView>
        <StackLayout>
          <Label Text="{Binding FormatedText}" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Margin="10,10" />
        </StackLayout>
      </ScrollView>
      <Button Text="Go to references" VerticalOptions="CenterAndExpand" Clicked="SwitchToOtherPage" />
    </StackLayout>
  </ContentPage.Content>
  
</ContentPage>