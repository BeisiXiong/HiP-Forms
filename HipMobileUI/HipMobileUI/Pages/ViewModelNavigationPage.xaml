<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:HipMobileUI.Viewmodels.NavigationPageViewModels;assembly=HipMobileUI"
             x:Class="HipMobileUI.Pages.ViewModelNavigationPage">
    <ContentView.BindingContext>
        <viewmodel:VmBindingViewModel />
    </ContentView.BindingContext>
    <StackLayout>
        <Button Text="Switch ViewModel" Command="{Binding SwitchSubview}" />
        <ContentView Content="{Binding Subview, Converter={StaticResource viewToViewModelConverter}}" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"></ContentView>
    </StackLayout>
</ContentPage>