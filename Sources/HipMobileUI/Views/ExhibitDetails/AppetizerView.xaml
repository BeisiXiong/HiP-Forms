<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HipMobileUI.Views.ExhibitDetails.AppetizerView">
  <ContentView.Content>
    <StackLayout Spacing="10">
      <Image Source="{Binding Image}" Aspect="AspectFill" VerticalOptions="FillAndExpand"/>
      <Label Text="{Binding Text}" LineBreakMode="WordWrap"/>
    </StackLayout>
  </ContentView.Content>
</ContentView>
