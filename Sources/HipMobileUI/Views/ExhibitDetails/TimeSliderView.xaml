<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:HipMobileUI.Controls;assembly=HipMobileUI"
             x:Class="HipMobileUI.Views.ExhibitDetails.TimeSliderView">
    <ContentView.Content>
      <Grid Margin="0,10">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition Height="0.6*"/>
        <RowDefinition Height="0.2*"/>
        <RowDefinition Height="0.2*"/>
      </Grid.RowDefinitions>
        <controls:FadeoverImageView Images="{Binding Images}" SelectedValue="{Binding Source={x:Reference Slider}, Path=SelectedValue}"/>  
        <Label Grid.Row="1" Text="{Binding DisplayedText}" LineBreakMode="WordWrap" Margin="10"/>
        <controls:TimeSlider x:Name="Slider" Grid.Row="2" HorizontalOptions="FillAndExpand" VerticalOptions="Center" HeightRequest="100" Images="{Binding Images}" Texts="{Binding Years}" ItemWidth="100" SafezoneFraction="0.3" FadezoneFraction="0.7" SeparatorColor="{StaticResource AccentColor}" SelectedValue="{Binding SelectedValue, Mode=OneWayToSource}"/>
      </Grid>
    </ContentView.Content>
</ContentView>

