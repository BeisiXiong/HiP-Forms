<pages:OrientationContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:HipMobileUI.Pages;assembly=HipMobileUI"
             x:Class="HipMobileUI.Pages.ExhibitDetailsPage"
             Title="{Binding Title}"
             OrientationController="PortraitConstant"
             xmlns:controls="clr-namespace:HipMobileUI.Controls;assembly=HipMobileUI">
  <pages:OrientationContentPage.ToolbarItems>
      <controls:HideableToolbarItem Icon="ic_headset_white"
                                    Command="{Binding ShowAudioToolbarCommand}"
                                    IsVisible="{Binding AudioAvailable}"
                                    Text="Audio Player"/>
  </pages:OrientationContentPage.ToolbarItems>
  <AbsoluteLayout>
    <ContentView Content="{Binding SelectedView, Converter={StaticResource ViewModelViewConverter}}"
                 AbsoluteLayout.LayoutFlags="SizeProportional" AbsoluteLayout.LayoutBounds="0,0,1,1" />
    <Button Image="ic_chevron_left" Command="{Binding PreviousViewCommand}"
            IsVisible="{Binding PreviousViewAvailable}" AbsoluteLayout.LayoutFlags="PositionProportional"
            AbsoluteLayout.LayoutBounds="0,0.5" BackgroundColor="#80D3D3D3" AutomationId="PreviousButton"/>
    <Button Image="ic_chevron_right" Command="{Binding NextViewCommand}" IsVisible="{Binding NextViewAvailable}"
            AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="1,0.5"
            BackgroundColor="#80D3D3D3" AutomationId="NextButton"/>

    <StackLayout Orientation="Vertical"
                 IsVisible="{Binding AudioToolbarVisible}"
                 BackgroundColor="White"
                 AbsoluteLayout.LayoutBounds="0,0,1,AutoSize" AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional">
      <RelativeLayout HeightRequest="60" HorizontalOptions="FillAndExpand">
        <Button IsVisible="{Binding IsAudioPlaying, Converter={StaticResource InverseBooleanConverter}}"
                Command="{Binding PlayCommand}" BorderColor="Transparent"
                Image="ic_play_arrow_black" BackgroundColor="Transparent" HorizontalOptions="Center" VerticalOptions="Center"
                RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.2}"
                RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=1}" />
        <Button IsVisible="{Binding IsAudioPlaying}"
                Command="{Binding PauseCommand}" BorderColor="Transparent"
                Image="ic_pause_black" BackgroundColor="Transparent" HorizontalOptions="Center" VerticalOptions="Center"
                RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.2}"
                RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=1}" />
        <Slider Maximum="{Binding MaxAudioProgress}" Value="{Binding CurrentAudioProgress}" VerticalOptions="Center"
                RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.6}" 
                RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.2}"
                RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=1}" />
        <Button Image="ic_closed_caption" BackgroundColor="Transparent" HorizontalOptions="Center" VerticalOptions="Center" 
                Command="{Binding CaptionCommand}" BorderColor="Transparent"
                RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.2}"
                RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.8}"
                RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=1}" />
      </RelativeLayout>
      <RelativeLayout HeightRequest="30" HorizontalOptions="FillAndExpand">
        <Label IsVisible="{Binding IsAudioPlaying, Converter={StaticResource InverseBooleanConverter}}"
               Text="Play" HorizontalOptions="Center"
               RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.2}"
               RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=1}"/>
        <Label IsVisible="{Binding IsAudioPlaying}"
               Text="Pause" HorizontalOptions="Center"
               RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.2}"
               RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=1}"/>
        <Label Text="Fortschritt" HorizontalOptions="Center"
               RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.6}"
               RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.2}"
               RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=1}"/>
        <Label Text="Untertitel" HorizontalOptions="Center"
               RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.2}"
               RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.8}"
               RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=1}"/>
      </RelativeLayout>
    </StackLayout>
  </AbsoluteLayout>
</pages:OrientationContentPage>