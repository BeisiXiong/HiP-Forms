<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HipMobileUI.Pages.ExhibitDetailsPage"
             xmlns:controls="clr-namespace:HipMobileUI.Controls;assembly=HipMobileUI"
             Title="{Binding Title}">
  <AbsoluteLayout>
    <ContentView Content="{Binding SelectedView, Converter={StaticResource ViewModelToViewConverter}}" AbsoluteLayout.LayoutFlags="SizeProportional" AbsoluteLayout.LayoutBounds="0,0,1,1"/>
    <Button Image="ic_chevron_left" Command="{Binding PreviousViewCommand}"  IsVisible="{Binding PreviousViewAvailable}" AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="0,0.5" BackgroundColor="#80D3D3D3"/>
    <Button Image="ic_chevron_right" Command="{Binding NextViewCommand}" IsVisible="{Binding NextViewAvailable}" AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="1,0.5" BackgroundColor="#80D3D3D3" />
    </AbsoluteLayout>
</ContentPage>